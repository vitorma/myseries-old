<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ufcg.aweseries"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".App">
        <activity
            android:label="@string/app_name"
            android:name=".gui.SeriesListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SeriesDetailsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SeasonListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.EpisodeListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.EpisodeDetailsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity
            android:name=".gui.SeriesSearchActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity
            android:name=".gui.RecentAndUpcomingEpisodesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity
            android:name=".gui.RecentEpisodesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity
            android:name=".gui.UpcomingEpisodesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>

        <receiver
            android:name=".gui.desktop_widget.AweseriesWidgetProvider"
            android:label="@string/large_widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_episodes_appwidget_info_4x4" />
        </receiver>

        <receiver
            android:name=".gui.desktop_widget.AweseriesMedWidgetProvider"
            android:label="@string/med_widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_episodes_appwidget_info_4x2" />
        </receiver>

        <receiver
            android:name=".gui.desktop_widget.AweseriesSmallWidgetProvider"
            android:label="@string/small_widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_episodes_appwidget_info_4x1" />
        </receiver>

        <service
            android:name="br.edu.ufcg.aweseries.gui.desktop_widget.AweseriesWidgetProvider$UpdateService">
        </service>

        <service
            android:name="br.edu.ufcg.aweseries.gui.desktop_widget.AweseriesSmallWidgetProvider$UpdateServiceSmall">
        </service>

        <service
            android:name=".gui.desktop_widget.AweseriesMedWidgetProvider$UpdateServiceMed">
        </service>

    </application>
</manifest>
