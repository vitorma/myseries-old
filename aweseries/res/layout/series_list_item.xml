<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:baselineAligned="true"
	android:orientation="horizontal"
	android:padding="5dp" >

	<FrameLayout
		android:id="@+id/frameLayout"
		android:layout_width="68dp"
		android:layout_height="100dp"
		android:layout_gravity="center_vertical" >

		<ImageView
			android:id="@+id/seriesImageView"
			android:layout_width="68dp"
			android:layout_height="100dp"
			android:layout_gravity="center_vertical"
			android:scaleType="centerInside"
			android:src="@drawable/small_poster_clapperboard" />

		<ProgressBar
			android:id="@+id/progressBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="gone" />
	</FrameLayout>

	<RelativeLayout
		android:id="@+id/linearLayout11"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:paddingLeft="5dp" >

		<TextView
			android:id="@+id/nameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:ellipsize="marquee"
			android:lines="1"
			android:marqueeRepeatLimit="marquee_forever"
			android:paddingRight="2dp"
			android:paddingLeft="3dp"
			android:scrollHorizontally="true"
			android:text="@string/loading"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<CheckBox
			android:id="@+id/seenMarkCheckBox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:focusable="false"
			android:focusableInTouchMode="false" />

		<TextView
			android:id="@+id/nextToSeeTextView"
			style="@style/aweseries_style.15sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/seenMarkCheckBox"
			android:layout_alignBottom="@id/seenMarkCheckBox"
			android:ellipsize="marquee"
			android:lines="1"
			android:marqueeRepeatLimit="marquee_forever"
			android:paddingRight="2dp"
			android:paddingBottom="5dp"
			android:scrollHorizontally="true"
			android:text="@string/loading" />

		<TextView
			android:id="@+id/nextToSeeLabelTextView"
			style="@style/aweseries_style.10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/seenMarkCheckBox"
			android:layout_above="@id/nextToSeeTextView"
			android:paddingRight="2dp"
			android:text="@string/next_episode_to_see" />
	</RelativeLayout>

</LinearLayout>