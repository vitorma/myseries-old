<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.myseries"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app"
        android:name=".application.App"
        android:theme="@style/MySeriesTheme">

        <activity
            android:label="@string/my_series"
            android:name=".gui.myseries.MySeriesActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.myschedule.MyScheduleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity"/>
        </activity>
        <activity
            android:name=".gui.seriessearch.SeriesSearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity"/>
        </activity>
        <activity
            android:name=".gui.series.SeriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity"/>
        </activity>
        <activity
            android:name=".gui.episodes.EpisodesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity"/>
        </activity>
        <activity
            android:name="mobi.myseries.gui.appwidget.AppWidgetPreferenceActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".gui.appwidget.ScheduleWidgetV8"
            android:label="@string/appwidget_myschedule"
            android:enabled="@bool/oldWidgetsEnabled"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_myschedule_old_info"/>
        </receiver>
        <receiver
            android:name="mobi.myseries.gui.appwidget.ScheduleWidgetV11"
            android:label="@string/appwidget_myschedule"
            android:enabled="@bool/newWidgetsEnabled"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_myschedule_info"/>
        </receiver>

        <service
            android:name="mobi.myseries.gui.appwidget.RefreshService"/>
        <service
            android:name="mobi.myseries.gui.appwidget.SetupService"/>
        <service
            android:name="mobi.myseries.gui.appwidget.AdapterService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

    </application>

</manifest>