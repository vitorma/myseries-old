<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.myseries"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".application.App"
        android:theme="@style/Theme.Sherlock"
        uiOptions="splitActionBarWhenNarrow">

        <activity
            android:label="@string/app_name"
            android:name=".gui.MySeriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SeriesSearchActivity">
        </activity>
        <activity
            android:name=".gui.SeriesDetailsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter >
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SeasonListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter >
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.EpisodeListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter >
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.EpisodeDetailsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".gui.RecentAndUpcomingEpisodesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".gui.RecentEpisodesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity
            android:name=".gui.UpcomingEpisodesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <receiver
            android:name=".gui.appwidget.MySeriesWidget"
            android:label="@string/large_widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_episodes_appwidget_info_4x4" />
        </receiver>
        <receiver
            android:name=".gui.appwidget.MySeriesMediumWidget"
            android:label="@string/med_widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_episodes_appwidget_info_4x2" />
        </receiver>
        <receiver
            android:name=".gui.appwidget.MySeriesSmallWidget"
            android:label="@string/small_widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_episodes_appwidget_info_4x1" />
        </receiver>
        <service android:name=".gui.appwidget.MySeriesWidget$UpdateService" />
        <service android:name=".gui.appwidget.MySeriesSmallWidget$UpdateServiceSmall" />
        <service android:name=".gui.appwidget.MySeriesMediumWidget$UpdateServiceMedium" />
    </application>

</manifest>