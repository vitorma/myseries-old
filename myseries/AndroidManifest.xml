<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.myseries"
    android:versionCode="4"
    android:versionName="0.2.2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app"
        android:theme="@style/MySeriesTheme" >

        <!-- Activities -->

        <activity
            android:name=".gui.myseries.MySeriesActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="mobi.myseries.gui.myschedule.singlepane.MyScheduleSinglePaneActivity" />

        <activity android:name="mobi.myseries.gui.myschedule.dualpane.MyScheduleDualPaneActivity" />

        <activity android:name="mobi.myseries.gui.mystatistics.MyStatisticsActivity" />

        <activity android:name="mobi.myseries.gui.features.FeaturesActivity" />

        <activity android:name=".gui.addseries.AddSeriesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity" />
        </activity>

        <activity android:name=".gui.update.UpdateActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity" />
        </activity>

        <activity android:name=".gui.backup.BackupActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity" />
        </activity>

        <activity android:name=".gui.series.SeriesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.myseries.MySeriesActivity" />
        </activity>

        <activity android:name="mobi.myseries.gui.episodes.EpisodesActivity" />

        <!-- TODO: Show widget to users who has bought widget feature
         activity android:name="mobi.myseries.gui.appwidget.ScheduleWidgetPreferenceActivity" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity-->

        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>
                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-16plq57cyv3mxdb" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Broadcast Receivers -->

        <!-- TODO: Show widget to users who has bought widget feature
            receiver
            android:name="mobi.myseries.gui.appwidget.ScheduleWidget"
            android:enabled="true"
            android:label="@string/schedulewidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="mobi.myseries.application.broadcast.action.SEEN_MARKUP" />
            </intent-filter>
            <intent-filter>
                <action android:name="mobi.myseries.application.broadcast.action.UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="mobi.myseries.application.broadcast.action.ADDITION" />
            </intent-filter>
            <intent-filter>
                <action android:name="mobi.myseries.application.broadcast.action.REMOVAL" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/schedulewidget_info" />
        </receiver-->

        <!-- Services -->

        <!-- TODO: Show widget to users who has bought widget feature
            service
            android:name="mobi.myseries.gui.appwidget.ScheduleWidgetViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" /-->

        <service
            android:name="mobi.myseries.gui.appwidget.TabService" />

    </application>

</manifest>
