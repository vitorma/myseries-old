<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollBar"
    android:background="@drawable/ab_solid_dark_holo"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appwidget_actionbar_height">

    <ImageButton
        android:id="@+id/firstButton"
        android:src="@drawable/ic_first"
        android:scaleType="centerInside"
        android:background="@drawable/item_background_holo_dark"
        android:padding="@dimen/gap_medium"
        android:layout_width="@dimen/appwidget_actionbar_button_width"
        android:layout_height="@dimen/appwidget_actionbar_button_height"/>

    <ImageButton
        android:id="@+id/previousButton"
        android:src="@drawable/ic_previous"
        android:scaleType="centerInside"
        android:background="@drawable/item_background_holo_dark"
        android:padding="@dimen/gap_medium"
        android:layout_width="@dimen/appwidget_actionbar_button_width"
        android:layout_height="@dimen/appwidget_actionbar_button_height"/>

    <TextView
        android:id="@+id/pageTextView"
        style="@style/TextView.Label.Small"
        android:gravity="center"
        android:background="@color/transparent"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/nextButton"
        android:src="@drawable/ic_next"
        android:scaleType="centerInside"
        android:background="@drawable/item_background_holo_dark"
        android:padding="@dimen/gap_medium"
        android:layout_width="@dimen/appwidget_actionbar_button_width"
        android:layout_height="@dimen/appwidget_actionbar_button_height"/>

    <ImageButton
        android:id="@+id/lastButton"
        android:src="@drawable/ic_last"
        android:scaleType="centerInside"
        android:background="@drawable/item_background_holo_dark"
        android:padding="@dimen/gap_medium"
        android:layout_width="@dimen/appwidget_actionbar_button_width"
        android:layout_height="@dimen/appwidget_actionbar_button_height"/>

</LinearLayout>