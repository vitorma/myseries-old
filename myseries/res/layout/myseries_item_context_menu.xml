<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hide"
        android:text="@string/action_hide_single_series"
        style="@style/TextView.Large.DarkGray"
        android:drawableLeft="@drawable/ic_action_filter_inverse"
        android:background="@drawable/list_selector_holo_light"
        android:drawablePadding="@dimen/gap_large"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/gap_medium"
        android:paddingBottom="@dimen/gap_medium"
        android:paddingLeft="@dimen/gap_large"
        android:paddingRight="@dimen/gap_large"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:background="@drawable/list_divider_holo_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/remove"
        android:text="@string/action_remove_single_series"
        style="@style/TextView.Large.DarkGray"
        android:drawableLeft="@drawable/ic_action_remove_inverse"
        android:background="@drawable/list_selector_holo_light"
        android:drawablePadding="@dimen/gap_large"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/gap_medium"
        android:paddingBottom="@dimen/gap_medium"
        android:paddingLeft="@dimen/gap_large"
        android:paddingRight="@dimen/gap_large"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>