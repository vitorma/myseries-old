<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/TextView.XLarge.DarkGray.Ellipsized"
        android:textColor="#ff808080"
        android:gravity="center_vertical"
        android:padding="@dimen/gap_large"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/titleDivider"
        android:background="#ff808080"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ProgressBar
        android:id="@+id/RestoreProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/gap_large" />

    <TextView
        android:id="@+id/RestoreStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingLeft="@dimen/gap_large"
        android:paddingRight="@dimen/gap_large"
        android:paddingBottom="@dimen/gap_large" />

    <View
        android:id="@+id/buttonHorizontalDivider"
        android:background="@drawable/list_divider_holo_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/button"
        android:text="@string/cancel"
        style="@style/DialogButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toucharea_minimum_side"/>

</LinearLayout>