<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewEpisodeDetailsShowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusDown="@+id/checkinButton"
        android:nextFocusLeft="@+id/textViewEpisodeDetailsShowName"
        android:nextFocusRight="@+id/textViewEpisodeDetailsShowName"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/TextViewEpisodeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/episode_airtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />
