<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/gap_medium" >

        <CheckedTextView
            android:id="@+id/SDCardCheckbox"
            style="@style/TextView.Medium.MediumGray.Bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_selector_holo_light"
            android:checkMark="@drawable/checkbox"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/gap_medium"
            android:text="@string/sd_card" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/SDCardCheckbox"
            android:layout_marginTop="@dimen/gap_small"
            android:background="@drawable/list_divider_holo_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/gap_medium" >

        <CheckedTextView
            android:id="@+id/GoogleDriveCheckbox"
            style="@style/TextView.Medium.MediumGray.Bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_selector_holo_light"
            android:checkMark="@drawable/checkbox"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/gap_medium"
            android:text="@string/google_drive" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/GoogleDriveCheckbox"
            android:layout_marginTop="@dimen/gap_small"
            android:background="@drawable/list_divider_holo_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/gap_medium" >

        <CheckedTextView
            android:id="@+id/DropboxCheckbox"
            style="@style/TextView.Medium.MediumGray.Bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_selector_holo_light"
            android:checkMark="@drawable/checkbox"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/gap_medium"
            android:text="@string/dropbox" />
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="96dp"
        android:layout_marginTop="@dimen/toucharea_minimum_side"
        android:text="Button" />

</LinearLayout>