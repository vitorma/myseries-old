<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gap_large"
    android:paddingLeft="@dimen/gap_large"
    android:paddingRight="@dimen/gap_large"
    android:paddingTop="@dimen/gap_medium" >

    <TextView
        style="@style/TextView.Medium.MediumGray.Bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/gap_medium"
        android:paddingRight="@dimen/gap_medium"
        android:text="@string/sd_card" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/list_divider_holo_light"
        android:paddingBottom="100dp" />

    <TextView
        style="@style/TextView.Medium.MediumGray.Bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/gap_medium"
        android:paddingRight="@dimen/gap_medium"
        android:text="@string/google_drive" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/list_divider_holo_light"
        android:paddingBottom="100dp" />

    <Spinner
        android:id="@+id/account_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider_holo_light" />
    
    <TextView
        style="@style/TextView.Medium.MediumGray.Bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/gap_medium"
        android:paddingRight="@dimen/gap_medium"
        android:text="@string/dropbox" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/list_divider_holo_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toucharea_minimum_side"
        android:layout_gravity="bottom" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/list_divider_holo_light" />

        <View
            android:id="@+id/dividerVertical"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/list_divider_holo_light" />
    </RelativeLayout>

</LinearLayout>

