<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_full_holo_light">

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Dialog.Title"
        android:visibility="gone"
        android:padding="@dimen/gap_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/titleDivider"
        android:background="@color/blue"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ScrollView
        android:id="@+id/messagePanel"
        android:paddingTop="@dimen/gap_medium"
        android:paddingBottom="@dimen/gap_medium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            style="@style/TextView.Dialog.Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gap_medium"
            android:paddingRight="@dimen/gap_medium"/>

    </ScrollView>

    <View
        android:id="@+id/buttonHorizontalDivider"
        android:background="@drawable/list_divider_holo_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/button"
        android:text="@string/ok"
        style="@style/DialogButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toucharea_minimum_side"/>

</LinearLayout>