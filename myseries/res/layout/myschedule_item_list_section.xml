<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop = "@dimen/gap_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date"
        style="@style/TextView.Medium"
        android:textSize="16sp"
        android:textColor="@color/dark_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/airDay"
        style="@style/TextView.Small.MediumGray.Bold"
        android:paddingLeft="@dimen/gap_small"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/date"
        android:layout_toRightOf="@id/date"/>

    <TextView
        android:id="@+id/relativeDay"
        style="@style/TextView.Small.LightGray.Ellipsized"
        android:gravity="right"
        android:paddingBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/date"
        android:layout_toRightOf="@id/airDay"/>

    <View
        android:background="@drawable/list_divider_holo_light"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/date"/>

</RelativeLayout>