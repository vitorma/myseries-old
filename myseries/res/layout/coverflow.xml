<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/coverflow_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_series_followed"
            android:visibility="invisible"/>

    <mobi.myseries.gui.widget.CoverFlow
        xmlns:coverflow="http://schemas.android.com/apk/res/mobi.myseries"
        android:id="@+id/coverflow"
        coverflow:imageWidth="68dp"
        coverflow:imageHeight="100dp"
        coverflow:withReflection="true"
        coverflow:imageReflectionRatio="0.2"
        coverflow:reflectionGap="2dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"/>

    <RelativeLayout
        android:id="@+id/coverflow_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/coverflow_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:ellipsize="marquee"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginTop="10dp"
            android:scrollHorizontally="true"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <mobi.myseries.gui.SeenEpisodesBar
            android:id="@+id/coverflow_item_bar"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/coverflow_item_name"
            android:layout_marginTop="5dp" />

        <CheckBox
            android:id="@+id/coverflow_item_seen_mark"
            android:button="@drawable/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/coverflow_item_next_to_see"
            style="@style/aweseries_style.15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/coverflow_item_seen_mark"
            android:layout_alignBottom="@id/coverflow_item_seen_mark"
            android:ellipsize="marquee"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:scrollHorizontally="true"
            android:text="@string/loading"/>

        <TextView
            android:id="@+id/coverflow_item_next_to_see_label"
            style="@style/aweseries_style.10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/coverflow_item_seen_mark"
            android:layout_above="@id/coverflow_item_next_to_see"
            android:paddingRight="2dp"
            android:text="@string/next_episode_to_see"/>
    </RelativeLayout>
</LinearLayout>