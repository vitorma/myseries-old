<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<mobi.myseries.gui.widget.CoverFlow
		xmlns:coverflow="http://schemas.android.com/apk/res/mobi.myseries"
		android:id="@+id/coverflow"
		coverflow:imageWidth="100dip"
		coverflow:imageHeight="150dip"
		coverflow:withReflection="true"
		coverflow:imageReflectionRatio="0.2"
		coverflow:reflectionGap="2dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dip"/>

	<RelativeLayout
        android:id="@+id/coverflow_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/coverflow_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:ellipsize="marquee"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingRight="2dp"
            android:paddingLeft="3dp"
            android:scrollHorizontally="true"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <CheckBox
            android:id="@+id/coverflow_item_seen_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:id="@+id/coverflow_item_next_to_see"
            style="@style/aweseries_style.15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/coverflow_item_seen_mark"
            android:layout_alignBottom="@id/coverflow_item_seen_mark"
            android:ellipsize="marquee"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:scrollHorizontally="true"
            android:text="@string/loading"/>

        <TextView
            android:id="@+id/coverflow_item_next_to_see_label"
            style="@style/aweseries_style.10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/coverflow_item_seen_mark"
            android:layout_above="@id/coverflow_item_next_to_see"
            android:paddingRight="2dp"
            android:text="@string/next_episode_to_see"/>
    </RelativeLayout>
</LinearLayout>