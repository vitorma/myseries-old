<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_light"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="@dimen/gap_medium"
                android:paddingBottom="@dimen/gap_medium"
                android:paddingLeft="@dimen/gap_large"
                android:paddingRight="@dimen/gap_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    
                <TextView
                    style="@style/TextView.Medium.Blue.Bold"
                    android:textColor="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/gap_medium"
                    android:paddingRight="@dimen/gap_medium"
                    android:text="@string/update_data_automatically" />
    
                <View
                    android:background="@color/green"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="1.5dp"/>
    
                <RadioGroup
                    android:id="@+id/automaticUpdatesRadioGroup"
                    style="@style/RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
    
                    <RadioButton
                        android:id="@+id/wifiOrDataPlanRadioButton"
                        style="@style/RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toucharea_minimum_side"
                        android:paddingLeft="@dimen/gap_medium"
                        android:paddingRight="@dimen/gap_medium"
                        android:text="@string/update_on_wifi_or_data_plan"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:background="@drawable/list_divider_holo_light"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
    
                    <RadioButton
                        android:id="@+id/wifiOnlyRadioButton"
                        style="@style/RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toucharea_minimum_side"
                        android:checked="true"
                        android:paddingLeft="@dimen/gap_medium"
                        android:paddingRight="@dimen/gap_medium"
                        android:text="@string/update_on_wifi"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:background="@drawable/list_divider_holo_light"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
    
                    <RadioButton
                        android:id="@+id/doNotUpdateRadioButton"
                        style="@style/RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toucharea_minimum_side"
                        android:paddingLeft="@dimen/gap_medium"
                        android:paddingRight="@dimen/gap_medium"
                        android:text="@string/do_not_update"
                        android:textSize="@dimen/text_size_medium" />
    
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="@dimen/gap_medium"
                android:paddingLeft="@dimen/gap_large"
                android:paddingRight="@dimen/gap_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
    
                <TextView
                    style="@style/TextView.Medium.Blue.Bold"
                    android:textColor="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/gap_medium"
                    android:paddingRight="@dimen/gap_medium"
                    android:text="@string/update_status" />

                <View
                    android:background="@color/green"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="1.5dp"/>

                <TextView
                    android:id="@+id/updateNotificationStatusMessage"
                    android:text="@string/update_not_running"
                    android:paddingTop="@dimen/gap_medium"
                    android:paddingLeft="@dimen/gap_medium"
                    android:paddingRight="@dimen/gap_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/updateNotificationProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:paddingLeft="@dimen/gap_medium"
                    android:paddingRight="@dimen/gap_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/latestSuccessfulUpdateMessage"
                    android:paddingTop="@dimen/gap_medium"
                    android:paddingBottom="@dimen/gap_medium"
                    android:paddingLeft="@dimen/gap_medium"
                    android:paddingRight="@dimen/gap_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <Button
                android:id="@+id/updateButton"
                android:text="@string/update_now"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toucharea_minimum_side"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
