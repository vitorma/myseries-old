<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/dialog_title"/>

    <include
        layout="@layout/dialog_title_divider"/>

    <ScrollView
        android:id="@+id/messagePanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <RadioGroup
        android:id="@+id/RestoreModeRadioGroup"
        style="@style/RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/SDCardRadioButton"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingLeft="@dimen/gap_medium"
            android:paddingRight="@dimen/gap_medium"
            android:paddingTop="@dimen/gap_medium"
            android:text="@string/sd_card"
            android:textSize="@dimen/text_size_medium"
            android:drawableLeft="@drawable/ic_sdcard"
            android:drawablePadding="3dp" />

        <View
            android:id="@+id/SDCardDivider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/list_divider_holo_light" />

        <RadioButton
            android:id="@+id/GoogleDriveRadioButton"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/gap_medium"
            android:paddingRight="@dimen/gap_medium"
            android:paddingTop="@dimen/gap_medium"
            android:text="@string/google_drive"
            android:textSize="@dimen/text_size_medium"
            android:drawableLeft="@drawable/ic_drive"
            android:drawablePadding="3dp"/>

        <View
            android:id="@+id/GoogleDriveDivider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/list_divider_holo_light" />

        <RadioButton
            android:id="@+id/DropboxRadioButton"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/gap_medium"
            android:paddingRight="@dimen/gap_medium"
            android:paddingTop="@dimen/gap_medium"
            android:text="@string/dropbox"
            android:textSize="@dimen/text_size_medium"
            android:drawableLeft="@drawable/ic_dropbox"
            android:drawablePadding="3dp" />
    </RadioGroup>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttonBar"
        android:padding="0dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="48.5dp">

        <View
            android:id="@+id/buttonDividerHorizontal"
            android:background="@drawable/list_divider_holo_light"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"/>

        <View
            android:id="@+id/buttonDividerVertical"
            android:background="@drawable/list_divider_holo_light" 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/backupButton"
            style="@style/DialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toucharea_minimum_side"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/buttonDividerHorizontal"
            android:layout_toLeftOf="@id/buttonDividerVertical"/>

        <Button
            android:id="@+id/restoreButton"
            style="@style/DialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toucharea_minimum_side"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/buttonDividerHorizontal"
            android:layout_toRightOf="@id/buttonDividerVertical"/>

    </RelativeLayout>

</LinearLayout>