<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/toggleEpisodeWatchMark"
        style="@style/TextView.Large.DarkGray"
        android:background="@drawable/list_selector_holo_light"
        android:gravity="left|center_vertical"
        android:padding="@dimen/gap_medium"
        android:minHeight="@dimen/toucharea_minimum_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:background="@drawable/list_divider_holo_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/seeEpisodeDetails"
        android:text="@string/schedulewidget_dialog_see_episode_details"
        style="@style/TextView.Large.DarkGray"
        android:background="@drawable/list_selector_holo_light"
        android:gravity="left|center_vertical"
        android:padding="@dimen/gap_medium"
        android:minHeight="@dimen/toucharea_minimum_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>