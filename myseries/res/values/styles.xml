    <style name="TextView.Small.LightGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.MediumGray">
        <item name="android:textColor">@color/text_medium_gray</item>
    </style>

    <style name="TextView.Small.MediumGray.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Small.MediumGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.DarkGray">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="TextView.Small.DarkGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.DarkGray.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Small.DarkGray.Bold.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.Blue">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextView.Small.Blue.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Small.LightBlue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextView.Small.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Small.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Small.TranslucentWhite">
        <item name="android:textColor">@color/translucent_white</item>
    </style>

    <style name="TextView.Small.TranslucentWhite.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.Yellow">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Medium.LightGray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="TextView.Medium.LightGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Medium.LightGray.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Medium.MediumGray">
        <item name="android:textColor">@color/text_medium_gray</item>
    </style>

    <style name="TextView.Medium.MediumGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Medium.MediumGray.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Medium.DarkGray">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="TextView.Medium.DarkGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Medium.Blue">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextView.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Medium.TranslucentWhite">
        <item name="android:textColor">@color/translucent_white</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.Large.DarkGray">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="TextView.Large.DarkGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Large.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Large.White.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Large.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextView.XLarge">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextView.XLarge.DarkGray">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <!-- EditText -->

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_medium_gray</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.PlainText">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.PlainText.ActionDone">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!-- DialogButton -->

    <style name="DialogButton">
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextView.Medium.DarkGray</item>
    </style>

    <!-- RadioGroup -->

    <style name="RadioGroup">
        <item name="android:showDividers">none</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- RadioButton -->

    <style name="RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:drawableRight">@drawable/btn_radio_holo_light</item>
    </style>

    <!-- TabButton -->

    <style name="TabButton" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/item_background_holo_dark</item>
    </style>

    <!-- ListView -->

    <style name="ListView" parent="android:Widget.Holo.Light.ListView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/gap_large</item>
        <item name="android:paddingRight">@dimen/gap_large</item>

        <item name="android:listSelector">@color/transparent</item>

        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:showDividers">beginning|middle|end</item>

        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:overScrollHeader">@null</item>
    </style>

    <style name="ListView.Dark" parent="android:Widget.Holo.ListView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- ExpandableListView -->

    <style name="ExpandableListView" parent="android:Widget.ExpandableListView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/gap_large</item>
        <item name="android:paddingRight">@dimen/gap_large</item>

        <item name="android:listSelector">@drawable/list_selector_holo_light</item>

        <item name="android:divider">@drawable/list_divider_holo_light</item>
        <item name="android:childDivider">@drawable/list_divider_holo_light</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:showDividers">beginning|middle|end</item>

        <item name="android:groupIndicator">@null</item>

        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- ScrollView -->

    <style name="ScrollView" parent="android:Widget.ScrollView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

</resources>