<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TextView -Old - DELETEME ASAP -->

    <style name="TextView" parent="android:Widget.TextView"/>

    <style name="TextView.Data">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="TextView.Data.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Data.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Data.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Data.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Data.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Data.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Label">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextView.Label.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Label.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    
    <style name="TextView.Label.Micro">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextView.Label.Micro.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextView.Label.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Label.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Section">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Section.Left">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Section.Right">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextView.Translucent">
        <item name="android:background">@color/translucent</item>
    </style>

    <style name="TextView.Translucent.Label">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Translucent.Label.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Dialog"/>

    <style name="TextView.Dialog.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextView.Dialog.Message">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Toast">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowRadius">2.75</item>
    </style>

    <style name="TextView.AppWidget"/>

    <style name="TextView.AppWidget.Title">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.AppWidget.Data">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView -->

    <style name="TextView.Micro">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextView.Micro.LightGray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="TextView.Micro.LightGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Micro.MediumGray">
        <item name="android:textColor">@color/text_medium_gray</item>
    </style>

    <style name="TextView.Micro.MediumGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Micro.DarkBlue">
        <item name="android:textColor">@color/text_dark_blue</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Small.LightGray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="TextView.Small.LightGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.MediumGray">
        <item name="android:textColor">@color/text_medium_gray</item>
    </style>

    <style name="TextView.Small.MediumGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small.DarkGray">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="TextView.Small.DarkGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.Large.DarkGray">
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="TextView.Large.DarkGray.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Large.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Large.White.Ellipsized">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- EditText -->

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.PlainText">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.PlainText.ActionDone">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!-- CheckBox -->

    <style name="CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Button -->

    <style name="Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- ImageButton -->

    <style name="ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- DialogButton -->

    <style name="DialogButton">
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextView.Dialog.Message</item>
    </style>

    <!-- RadioGroup -->

    <style name="RadioGroup">
        <item name="android:showDividers">none</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- RadioButton -->

    <style name="RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:drawableRight">@drawable/btn_radio_holo_light</item>
    </style>

    <!-- ListView -->

    <style name="ListView" parent="android:Widget.ListView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/gap_large</item>
        <item name="android:paddingRight">@dimen/gap_large</item>

        <item name="android:listSelector">@color/transparent</item>

        <item name="android:divider">@drawable/list_divider_holo_light</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:showDividers">beginning|middle|end</item>

        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:overScrollHeader">@null</item>
    </style>

    <style name="ListView.AppWidget">
        <item name="android:padding">0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- ExpandableListView -->

    <style name="ExpandableListView" parent="android:Widget.ExpandableListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:divider">@drawable/list_divider_holo_light</item>
        <item name="android:childDivider">@drawable/list_divider_holo_light</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:groupIndicator">@drawable/expander_group_holo_light</item>
        <item name="android:indicatorRight">@dimen/toucharea_minimum_side</item>
    </style>

    <!-- ScrollView -->

    <style name="ScrollView" parent="android:Widget.ScrollView">
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- TitlePageIndicator -->

    <style name="TitlePageIndicator">
        <item name="android:background">@color/white</item>
        <item name="footerColor">@color/blue</item>
        <item name="footerLineHeight">2dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="textColor">@color/black</item>
        <item name="selectedColor">@color/black</item>
        <item name="selectedBold">true</item>
    </style>

    <!-- ProgressBar -->

    <style name="ProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
        <item name="android:animationResolution">33</item>
    </style>

    <style name="ProgressBar.Large" parent="android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
        <item name="android:animationResolution">33</item>
    </style>

    <!-- Animation -->

    <style name="DialogAnimation" parent="android:Animation.Dialog"/>

    <!-- ActionBar -->

    <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="backgroundStacked">@drawable/abs__ab_bottom_solid_inverse_holo</item>
        <item name="android:backgroundStacked">@drawable/abs__ab_bottom_solid_inverse_holo</item>
    </style>

</resources>