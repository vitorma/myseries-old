    <style name="TextView.Dialog"/>

    <style name="TextView.Dialog.Title">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/dialog_title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/gap_large</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextView.Dialog.Message">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dialog_message</item>
    </style>

    <!-- EditText -->

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_medium_gray</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.PlainText">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.PlainText.ActionDone">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditText.PlainText.ActionSearch">
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <!-- ProgressBar -->

    <style name="ProgressBarAdd" parent="android:style/Widget.Holo.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_add</item>
    </style>

    <style name="ProgressBarRemove" parent="android:style/Widget.Holo.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_remove</item>
    </style>

    <style name="ProgressBarHorizontal" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
      <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
    </style>

    <!-- Button -->

    <style name="Button" parent="android:Widget.Holo.Light.Button">
      <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <!-- ImageButton -->

    <style name="ImageButton" parent="android:Widget.Holo.Light.ImageButton">
      <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="BorderlessButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:background">@drawable/list_selector_holo_light</item>
    </style>

    <!-- DialogButton -->

    <style name="DialogButton">
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextView.Medium.DarkGray</item>
    </style>

    <!-- RadioGroup -->

    <style name="RadioGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">none</item>
    </style>

    <!-- RadioButton -->

    <style name="RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:drawableRight">@drawable/btn_radio_holo_light</item>
    </style>

    <!-- TabButton -->

    <style name="TabButton" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#ff424242</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/tab_indicator_ab_actionbar</item>
    </style>

    <!-- ListView -->

    <style name="ListView" parent="android:Widget.Holo.Light.ListView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/gap_large</item>
        <item name="android:paddingRight">@dimen/gap_large</item>

        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
        <item name="android:drawSelectorOnTop">true</item>

        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:showDividers">beginning|middle|end</item>

        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:overScrollHeader">@null</item>
    </style>

    <style name="ListView.Dark" parent="android:Widget.Holo.ListView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- ScrollView -->

    <style name="ScrollView" parent="android:Widget.ScrollView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- ActionBar -->

    <style name="ActionBar.Solid.Actionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_actionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_actionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_actionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Actionbar</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
    </style>

    <style name="ActionBar.Transparent.Actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_actionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Actionbar</item>
    </style>

    <style name="PopupMenu.Actionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar</item>
    </style>

    <style name="DropDownListView.Actionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_actionbar</item>
    </style>

    <style name="ActionBarTabStyle.Actionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbar</item>
    </style>

    <style name="DropDownNav.Actionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_actionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar</item>
    </style>
    
    <style name="ProgressBar.Actionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_actionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Actionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_actionbar</item>
    </style>

    <style name="ActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBar.TabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/gray65_to_gray42</item>
    </style>

    <style name="ActionBar.PopupMenuText.Small" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBar.PopupMenuText.Large" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ActionBarSpinner -->

    <style name="ActionBarSpinner" parent="TextView"/>

    <style name="ActionBarSpinner.Title">
        <item name="android:textSize">@dimen/text_size_ab_spinner_title</item>
        <item name="android:textColor">#ff272727</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBarSpinner.Subtitle">
        <item name="android:textSize">@dimen/text_size_ab_spinner_subtitle</item>
        <item name="android:textColor">#ff656565</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionBarSpinner.Row">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/gap_medium</item>
    </style>

    <!-- Series - DETAILS -->

    <style name="SeriesDetails_Div1">
        <item name="android:layout_below">@id/seriesPosterImageView</item>
    </style>

    <style name="SeriesDetails_PosterColumn">
        <item name="android:visibility">gone</item>
    </style>

</resources>