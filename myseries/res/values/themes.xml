<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MySeriesTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:expandableListViewStyle">@style/ExpandableListView</item>

        <item name="android:scrollViewStyle">@style/ScrollView</item>
        <item name="coverFlowStyle">@style/CoverFlow</item>
    </style>

    <style name="MySeriesTheme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>