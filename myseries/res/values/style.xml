<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myseries_style"></style>

    <style name="myseries_style.10sp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="myseries_style.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="myseries_style.30sp">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="myseries_style.12sp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="myseries_style.12sp.white">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myseries_style.15sp">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="myseries_style.18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myseries_style.toolbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <color name="myseries_style.toolbar_background">#00000000</color>

    <style name="myseries_style.toolbar_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <dimen name="myseries_style.widget_margin">5dp</dimen>

    <!-- ChunkBar -->
    <color name="myseries_style.chunkbar_foreground">#32B6E7</color>
    <color name="myseries_style.chunkbar_background">#272727</color>
    <color name="myseries_style.chunkbar_textColor">#FFFFFF</color>
    <color name="myseries_style.chunkbar_textBackground">#2086AC</color>


    <style name="CustomTitlePageIndicator">
        <item name="android:background">@color/white</item>
        <item name="footerColor">@color/blue</item>
        <item name="footerLineHeight">2dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="textColor">@android:color/black</item>
        <item name="selectedColor">#FF000000</item>
        <item name="selectedBold">true</item>
    </style>

</resources>